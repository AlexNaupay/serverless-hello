{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "User",
  "description": "A user from my app",
  "type": "object",
  "properties": {
    "name": {
      "description": "Name",
      "type": "string"
    },
    "phone": {
      "description": "Phone number",
      "type": "string",
      "format": "phone"
    },
    "age": {
      "description": "How old is the user",
      "type": "number",
      "exclusiveMinimum": false,
      "minimum": 18,
      "maximum": 150
    }
  },
  "required": [
    "name",
    "age"
  ]
}